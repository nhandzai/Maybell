<section class="container mx-auto w-full flex-grow max-w-[1200px] border-b py-5 lg:flex lg:flex-row lg:py-10">
  <!-- sidebar  -->
  <section id="sidebar" class="hidden w-[300px] flex-shrink-0 px-4 lg:block">
    <div class="border-b py-5">
      <div class="flex items-center">
        <img width="40px" height="40px" class="rounded-full object-cover" src="<%= user_db.avatar ? user_db.avatar : 'images/avatar-photo.png' %>"
          alt="Red woman portrait" />
        <div class="ml-5">
          <p class="font-bold">
            <%= user.fullName %>
          </p>
        </div>
      </div>
    </div>

    <div class="flex border-b py-5">
      <div class="w-full">
        <div class="flex w-full">
          <div class="flex flex-col gap-2">
            <a href="/account-page" class="flex items-center gap-2 font-medium">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor" class="h-5 w-5">
                <path stroke-linecap="round" stroke-linejoin="round"
                  d="M15 9h3.75M15 12h3.75M15 15h3.75M4.5 19.5h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5zm6-10.125a1.875 1.875 0 11-3.75 0 1.875 1.875 0 013.75 0zm1.294 6.336a6.721 6.721 0 01-3.17.789 6.721 6.721 0 01-3.168-.789 3.376 3.376 0 016.338 0z" />
              </svg>
              Manage account</a>
            <a href="profile-information"
              class="active:blue-900 text-gray-500 duration-100 hover:text-yellow-400">Profile information</a>
            <a href="manage-address" class="text-gray-500 duration-100 hover:text-yellow-400">Manage Addresses</a>
            <a href="change-password" class="text-gray-500 duration-100 hover:text-yellow-400">Change password</a>
          </div>
        </div>
      </div>
    </div>

    <div class="flex border-b py-5">
      <div class="flex w-full">
        <div class="flex flex-col gap-2">
          <a href="my-order-history" class="flex items-center gap-2 font-medium active:text-violet-900">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-5 w-5">
              <path
                d="M3.375 3C2.339 3 1.5 3.84 1.5 4.875v.75c0 1.036.84 1.875 1.875 1.875h17.25c1.035 0 1.875-.84 1.875-1.875v-.75C22.5 3.839 21.66 3 20.625 3H3.375z" />
              <path fill-rule="evenodd"
                d="M3.087 9l.54 9.176A3 3 0 006.62 21h10.757a3 3 0 002.995-2.824L20.913 9H3.087zm6.163 3.75A.75.75 0 0110 12h4a.75.75 0 010 1.5h-4a.75.75 0 01-.75-.75z"
                clip-rule="evenodd" />
            </svg>

            My Order History</a>
        </div>
      </div>
    </div>


    <div class="flex py-5">
      <div class="flex w-full">
        <div class="flex flex-col gap-2">
          <a href="log-out" class="flex items-center gap-2 font-medium active:text-violet-900">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
              stroke="currentColor" class="h-5 w-5">
              <path stroke-linecap="round" stroke-linejoin="round"
                d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15m3 0l3-3m0 0l-3-3m3 3H9" />
            </svg>

            Log Out</a>
        </div>
      </div>
    </div>
  </section>
  <!-- /sidebar  -->

  <!-- option cards  -->


  <section class="container mx-auto my-3 flex w-full flex-col gap-3 px-4 md:hidden">
    <!-- 1 -->
    <% orders.orderProducts.forEach(orderProduct=> { %>
      <div class="flex w-full border px-4 py-4">
        <img class="self-start object-contain" width="90px" src="<%= orderProduct.product.productImages[0].image %>"
          alt="bedroom image" />
        <div class="ml-3 flex w-full flex-col justify-center">
          <div class="flex items-center justify-between">
            <p class="text-xl font-bold">
              <%=orderProduct.product.name%>
            </p>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-5 w-5">
              <path
                d="M9.653 16.915l-.005-.003-.019-.01a20.759 20.759 0 01-1.162-.682 22.045 22.045 0 01-2.582-1.9C4.045 12.733 2 10.352 2 7.5a4.5 4.5 0 018-2.828A4.5 4.5 0 0118 7.5c0 2.852-2.044 5.233-3.885 6.82a22.049 22.049 0 01-3.744 2.582l-.019.01-.005.003h-.002a.739.739 0 01-.69.001l-.002-.001z" />
            </svg>
          </div>

          <p class="py-3 text-xl font-bold text-violet-900">$<%=orderProduct.product.realPrice%>
          </p>
          <div class="mt-2 flex w-full items-center justify-between">
            <div class="flex items-center justify-center">
              <div class="flex cursor-text items-center justify-center active:ring-gray-500">
                <%=orderProduct.quantity%>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }) %>


  </section>
  <!-- /Mobile product table  -->

  <!-- Product table  -->
  <section class="w-full max-w-[1200px] gap-3 px-5 pb-10">
    <table class="hidden w-full md:table">
      <thead class="h-16 bg-neutral-100">
        <tr>
          <th>ITEM</th>
          <th>PRICE</th>
          <th>QUANTITY</th>
          <th>TOTAL</th>
        </tr>
      </thead>
      <tbody>
        <!-- 1 -->

        <% orders.orderProducts.forEach(orderProduct=> { %>
          <tr class="h-[100px] border-b">
            <td class="align-middle">
              <div class="flex">
                <img class="w-[90px]" src="<%= orderProduct.product.productImages[0].image %>" alt="bedroom image" />
                <div class="ml-3 flex flex-col justify-center">
                  <p class="text-xl font-bold">
                    <%=orderProduct.product.name%>
                  </p>

                </div>
              </div>
            </td>
            <td class="mx-auto text-center">&#36;<%=orderProduct.product.realPrice%>
            </td>
            <td class="text-center align-middle">
              <%=orderProduct.quantity%>>
            <td class="mx-auto text-center">&#36;<%=orderProduct.product.realPrice * orderProduct.quantity%>
            </td>
          </tr>
          <% }) %>


      </tbody>
    </table>
    <!-- /Product table  -->

    <!-- Summary  -->

    <section class="my-5 flex w-full flex-col gap-4 lg:flex-row">
      <div class="lg:w-1/2">
        <div class="border py-5 px-4 shadow-md">
          <p class="font-bold">ORDER SUMMARY</p>

          <div class="flex justify-between border-b py-5">
            <p>Subtotal</p>
            <p>$<%=orders.total%>
            </p>
          </div>

          <div class="flex justify-between border-b py-5">
            <p>Shipping</p>
            <p>Free</p>
          </div>

          <div class="flex justify-between py-5">
            <p>Total</p>
            <p>$<%=orders.total%>
            </p>
          </div>
        </div>
      </div>

      <!-- Address info  -->

      <div class="lg:w-1/2">
        <div class="border py-5 px-4 shadow-md">
          <p class="font-bold">ORDER INFORMATION</p>

          <div>
            <p>Order &num;<%=orders.id%>
            </p>
          </div>

          <div class="flex flex-col border-b py-5">
            <p>
              Status:
              <span class="font-bold text-green-600">
                <%=orders.status%>
              </span>
            </p>

            <p>Date:<%=orders.status%>
            </p>
          </div>

          <div></div>

          <div class="flex flex-col border-b py-5">
            <p class="font-bold">ADDRESS INFORMATION</p>
            <p>Country: <%=orders.country%></p>
            <p>City: <%=orders.city%></p>
            
          </div>

          <div class="flex flex-col py-5">
            <p class="font-bold">PAYMENT INFORMATION</p>
            <p>Payment method: <%=orders.paymentMethod.methodName%></p>
           
          </div>
        </div>
      </div>

      <!-- /Address info  -->
    </section>
  </section>

  <!-- /Summary -->



</section>