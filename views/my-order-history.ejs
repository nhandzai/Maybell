        <tr>
          <th>ORDER</th>
          <th>DATE</th>
          <th>TOTAL</th>
          <th>STATUS</th>
          <th>ACTION</th>
        </tr>
      </thead>
      <tbody>
        <!-- 1 -->

        <tr class="h-[100px] border-b">
          <td class="text-center align-middle">&#8470; 1245</td>
          <td class="mx-auto text-center">22/06/2023</td>
          <td class="text-center align-middle">&#36;620</td>

          <td class="mx-auto text-center">
